<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

        <com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:background="#00000000"
            app:canLoop="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#eeeeee" />
        <com.yskj.welcomeorchard.widget.NoScrollGridView
            android:id="@+id/gv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:numColumns="5"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#eeeeee" />
        <ImageView
            android:id="@+id/img_des_one"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_advertising"/>
        <ImageView
            android:id="@+id/main_exessive"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            />
    <!--    android:numColumns="5"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#eeeeee" />
        <com.yskj.welcomeorchard.widget.NoScrollGridView
            android:id="@+id/gv_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:scrollbars="none"
            android:layout_marginRight="5dp"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="5dp"
            android:numColumns="2"/>
        <TextView
            android:id="@+id/img_des_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="ㅡ附近商家ㅡ"/>

</LinearLayout>
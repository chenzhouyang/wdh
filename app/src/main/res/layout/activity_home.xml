<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.0"
            android:visibility="gone" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"
            />

        <RadioGroup
            android:id="@+id/home_radio_button_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/home_tab_local"
                style="@style/home_tab_bottom"
                android:drawableTop="@drawable/home_tab_friend"
                android:checked="true"
                android:text="本地" />
            <RadioButton
                android:id="@+id/home_tab_main"
                style="@style/home_tab_bottom"
                android:drawableTop="@drawable/home_tab_main"
                android:text="唯信"
                android:visibility="gone"/>

            <RadioButton
                android:id="@+id/home_tab_shopping_cart"
                style="@style/home_tab_bottom"
                android:drawableTop="@drawable/home_tab_popular"
                android:text="扫码" />
            <RadioButton
                android:id="@+id/home_tab_ad"
                style="@style/home_tab_bottom"
                android:drawableTop="@drawable/home_tab_shop"
                android:text="广告"
                />
            <RadioButton
                android:id="@+id/home_tab_user"
                style="@style/home_tab_bottom"
                android:drawableTop="@drawable/home_tab_user"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>

</TabHost>
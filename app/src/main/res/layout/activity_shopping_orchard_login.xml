<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<include layout="@layout/activity_orchard_title"/>
    <ImageView
        android:id="@+id/img_control"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:visibility="invisible"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:background="@drawable/drawable_login"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:drawableLeft="@mipmap/img_phone"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="+86"
            android:textColor="#343434"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="输入手机号码"
            android:imeOptions="flagNoExtractUi"
            android:numeric="integer"
            android:textColorHint="#a6a6a6"
            android:textSize="14sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/drawable_login">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:drawableLeft="@mipmap/img_password"
                android:gravity="center" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="false"
                android:hint="输入密码"
                android:imeOptions="flagNoExtractUi"
                android:numeric="integer"
                android:textColorHint="#a6a6a6"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_forget_pwd"
            android:layout_width="63dp"
            android:layout_height="26dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/drawable_forget_button"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="#9b9b9c"
            android:textSize="12sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="260dp"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:drawablePadding="3dp"
        android:drawableRight="@mipmap/img_register_right"
        android:gravity="center_vertical|right"
        android:text="快速注册"
        android:textColor="#474e51"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/drawable_login_button"
        android:text="登录"
        android:textColor="#ffffff" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/layout_title_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/left_arrow_black_kuohao" />

        <EditText
            android:id="@+id/ed_keyword"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@mipmap/border_white"
            android:hint="搜索商品"
            android:drawableLeft="@mipmap/search_ico"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#d2d2d9"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="搜索"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
    </LinearLayout>
</LinearLayout>
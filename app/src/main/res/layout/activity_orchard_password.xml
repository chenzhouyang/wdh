<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_theme">
<include layout="@layout/activity_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/drawable_add_bank">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#6c6c6c"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="13sp"
                        android:text="新密码"/>
                    <EditText
                        android:id="@+id/et_new_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:maxLength="6"
                        android:background="@null"
                        android:imeOptions="flagNoExtractUi"
                        android:cursorVisible="false"
                        android:textColorHint="#b9b9b9"
                        android:textSize="13sp"
                        android:numeric="integer"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"
                    android:layout_marginTop="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#6c6c6c"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textSize="13sp"
                        android:text="确认新密码"/>
                    <EditText
                        android:id="@+id/et_new_pwd_sure"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="#000000"
                        android:maxLength="6"
                        android:cursorVisible="false"
                        android:imeOptions="flagNoExtractUi"
                        android:textColorHint="#b9b9b9"
                        android:textSize="13sp"
                        android:numeric="integer"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"
                    android:layout_marginTop="5dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#6c6c6c"
                            android:layout_weight="3"
                            android:gravity="right"
                            android:textSize="13sp"
                            android:text="验证码"/>
                        <EditText
                            android:id="@+id/et_code"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textColor="#000000"
                            android:cursorVisible="false"
                            android:textColorHint="#b9b9b9"
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="11sp"
                            android:numeric="integer"
                            />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_get_code"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical|right"
                        android:text="获取"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:textColor="#9b9b9c"
                        android:background="@drawable/drawable_forget_button"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/activity_red"
                    android:inputType="number"
                    android:paddingLeft="30dp"
                    android:textSize="9sp"
                    android:text="密码是6位的数字"/>
                <Button
                    android:id="@+id/btn_sure"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/activity_red"
                    android:text="确定"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>

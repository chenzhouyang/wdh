<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:textColor="#252825"
        android:textSize="15sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="11dp"
        >
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#e42020"
            />
        <TextView
            android:id="@+id/tv_m_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/c999999"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_art_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/c999999"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_show"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:src="@mipmap/index_show"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/img_share"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:src="@mipmap/index_share_ico"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/img_shopping_cart"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:clickable="true"
                android:src="@mipmap/index_shopcar_ico"
                android:padding="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:clipToPadding="true"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <LinearLayout
        android:id="@+id/ll_title"
        style="@style/local_server_title"
        android:background="@color/white">
        <ImageView
            android:id="@+id/image_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/left_arrow_yellow" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/line"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/btn_back_call"
            android:text="团购详情"
            android:textSize="17sp"
            android:textColor="#333333" />
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@mipmap/share"
            android:visibility="gone"/>
    </LinearLayout>
    <com.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--头部的轮播图-->
            <!--canLoop 控制循环与否-->
            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.bigkoo.convenientbanner.ConvenientBanner
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/convenientBanner"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        app:canLoop="true"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#e68d8c8c"
                            android:paddingLeft="20dp"
                            android:paddingTop="5dp"
                            android:lines="1"
                            android:gravity="bottom"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tv_des"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#e68d8c8c"
                            android:lines="1"
                            android:paddingLeft="20dp"
                            android:paddingBottom="5dp"
                            android:lineSpacingExtra="2dp"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/ll_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textColor="#ee212a"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/round_red_stoke"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#ee212a"
                        android:textSize="10sp" />
                        <View
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_cf08e1f_solid"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/white"
                        android:text="立即抢购"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f0f0f2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@mipmap/local_duigou"
                    android:drawablePadding="10dp"
                    android:text="随时退"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_below="@id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/local_duigou"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="过期自动退"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_sell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="right"
                    android:textColor="#404040"
                    android:textSize="13sp"
                    android:layout_marginLeft="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/tv1" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f0f0f2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="20dp"
                android:textColor="#4d494d"
                android:background="@color/white"
                android:text="商家信息"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f0f0f2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textSize="17sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="#5a5b5c"/>
                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@mipmap/local_position_ico_small"
                        android:drawablePadding="5dp"
                        android:text="1.5km"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:padding="20dp">
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="30dp"
                        android:background="#5a5b5c"/>
                    <ImageButton
                        android:id="@+id/image_button_tel"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/local_iphone_icon"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f0f0f2"/>
            <LinearLayout
                android:id="@+id/ll_meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:textColor="#4d494d"
                    android:background="@color/white"
                    android:text="套餐"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#f0f0f2"/>
                <com.yskj.welcomeorchard.widget.NoScrollListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                </com.yskj.welcomeorchard.widget.NoScrollListView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/local_server_ll"
                android:orientation="vertical">
            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@color/white"
                android:visibility="gone"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f0f0f2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="20dp"
                android:textColor="#4d494d"
                android:background="@color/white"
                android:text="购买须知"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f0f0f2"/>
            <TextView
                android:id="@+id/tv_buy_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:lineSpacingExtra="5dp"
                android:background="@color/white"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f0f0f2"/>
            <TextView
                android:id="@+id/tv_recommend"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:background="#fd3854"
                android:text="本商家的其他热卖商品"
                android:gravity="center_vertical"
                android:textSize="16sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f0f0f2"/>
            <com.yskj.welcomeorchard.widget.NoScrollListView
                android:id="@+id/listView_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            </com.yskj.welcomeorchard.widget.NoScrollListView>
        </LinearLayout>
    </com.pulltorefresh.library.PullToRefreshScrollView>
    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/ll_title">
    </LinearLayout>

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/convenientBanner_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:canLoop="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
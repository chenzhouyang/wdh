<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#f3f3f3"
    android:orientation="vertical">
    <include layout="@layout/activity_orchard_title"/>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/drawable_login"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/img_phone"
            android:drawablePadding="5dp"
            android:layout_marginLeft="14dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:cursorVisible="false"
            android:imeOptions="flagNoExtractUi"
            android:hint="请输入手机号"
            android:textColorHint="#a6a6a6"
            android:textSize="14sp"
            android:numeric="integer"
             />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/drawable_login"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="5dp"
                android:layout_marginLeft="14dp"
                android:drawableLeft="@mipmap/img_auth_code"
                android:gravity="center" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:cursorVisible="false"
                android:hint="请输入验证码"
                android:imeOptions="flagNoExtractUi"
                android:numeric="integer"
                android:textColorHint="#a6a6a6"
                android:textSize="14sp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_get_code"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical|right"
            android:text="获取验证码"
            android:textSize="11sp"
            android:layout_marginRight="5dp"
            android:textColor="#9b9b9c"
            android:background="@drawable/drawable_forget_button"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/drawable_login"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:layout_marginLeft="14dp"
            android:drawableLeft="@mipmap/img_share_people"
            android:gravity="center" />

        <EditText
            android:id="@+id/et_share_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="请输入分享人手机号"
            android:textColorHint="#a6a6a6"
            android:imeOptions="flagNoExtractUi"
            android:textSize="14sp"
            android:inputType="number"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_to_login"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:layout_marginTop="27dp"
        android:textColor="#514f4d"
        android:text="已有账号/登录">
    </TextView>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/drawable_login_button"
        android:textColor="#ffffff"
        android:text="注册" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/layout_theme">

   <include layout="@layout/activity_title"/>

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_all"
            style="@style/selector_rbtn_blue_line"
            android:checked="true"
            android:text="全部"/>

        <!--<RadioButton
            android:id="@+id/rb_wait_pay"
            style="@style/selector_rbtn_blue_line"
            android:text="待付款"/>-->

        <RadioButton
            android:id="@+id/rb_wait_use"
            style="@style/selector_rbtn_blue_line"
            android:text="待使用"/>

        <RadioButton
            android:id="@+id/rb_over_due"
            style="@style/selector_rbtn_blue_line"
            android:text="已使用"/>

        <RadioButton
            android:id="@+id/rb_after_sell"
            style="@style/selector_rbtn_blue_line"
            android:layout_weight="1.2"
            android:text="退款/售后"/>
    </RadioGroup>

    <com.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.yskj.welcomeorchard.widget.NoScrollListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:scrollbars="none"
                android:background="@color/white">
            </com.yskj.welcomeorchard.widget.NoScrollListView>
        </LinearLayout>
    </com.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>

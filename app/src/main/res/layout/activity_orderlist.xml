<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_theme">
    <include layout="@layout/activity_title"/>
    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/deliver_goods"
            style="@style/selector_rbtn_red_line"
            android:checked="true"
            android:text="待付款"/>

        <RadioButton
            android:id="@+id/send_goods"
            style="@style/selector_rbtn_red_line"
            android:text="待发货"/>
        <RadioButton
            android:id="@+id/rb_send"
            style="@style/selector_rbtn_red_line"
            android:text="待收货"/>

        <RadioButton
            android:id="@+id/rb_got"
            style="@style/selector_rbtn_red_line"
            android:text="已收货"/>
    </RadioGroup>
    <com.pulltorefresh.library.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/order_list_lv"/>

</LinearLayout>
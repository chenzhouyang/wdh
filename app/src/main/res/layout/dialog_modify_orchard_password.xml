<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/drawable_add_bank">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6c6c6c"
                        android:textSize="11sp"
                        android:text="新密码"/>
                    <EditText
                        android:id="@+id/et_new_pwd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:background="@null"
                        android:imeOptions="flagNoExtractUi"
                        android:cursorVisible="false"
                        android:textColorHint="#b9b9b9"
                        android:textSize="11sp"
                        android:numeric="integer"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"
                    android:layout_marginTop="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6c6c6c"
                        android:textSize="11sp"
                        android:text="确认新密码"/>
                    <EditText
                        android:id="@+id/et_new_pwd_sure"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="#000000"
                        android:cursorVisible="false"
                        android:imeOptions="flagNoExtractUi"
                        android:textColorHint="#b9b9b9"
                        android:textSize="11sp"
                        android:numeric="integer"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d9d9"
                    android:layout_marginTop="5dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6c6c6c"
                            android:textSize="11sp"
                            android:text="验证码"/>
                        <EditText
                            android:id="@+id/et_code"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textColor="#000000"
                            android:cursorVisible="false"
                            android:textColorHint="#b9b9b9"
                            android:imeOptions="flagNoExtractUi"
                            android:textSize="11sp"
                            android:numeric="integer"
                            />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_get_code"
                        android:layout_width="40dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical|right"
                        android:text="获取"
                        android:textSize="11sp"
                        android:textColor="#9b9b9c"
                        android:background="@drawable/drawable_forget_button"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#9a9a9a"
                    android:textSize="9sp"
                    android:text=""/>
                <Button
                    android:id="@+id/btn_sure"
                    android:layout_width="44dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/drawable_login_button"
                    android:text="确定"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_del"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|top"
                android:padding="5dp"
                android:src="@mipmap/img_black_delete" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <LinearLayout style="@style/local_server_title"
        android:background="@color/white"
        >
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="3"
           android:id="@+id/sever_near_close"
           android:src="@mipmap/left_arrow_yellow"/>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/loserver_white_solid"
            android:drawableLeft="@mipmap/local_search"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="美食"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColorHint="#5d5d5d"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_address1"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:text="河南许昌"
            android:textColor="#333333"
            />
    </LinearLayout>
    <com.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_kinds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_kind"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="全部分类 "
                        android:textColor="#f08e1f" />

                </LinearLayout>
                <TextView
                    android:id="@+id/check_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@mipmap/down_arrow"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="10km "
                    android:textColor="#242424" />
            </LinearLayout>
            <!--<View-->
                <!--android:layout_width="70dp"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:background="#f08e1f"/>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="热门商家"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="查看更多"
                    android:textColor="@color/gray"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>
            <com.yskj.welcomeorchard.widget.HorizontalListView
                android:id="@+id/hor_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="145dp"
                android:background="@color/white"
                android:visibility="gone"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f2f2f2"
                android:visibility="gone"/>
            <com.yskj.welcomeorchard.widget.NoScrollListView
                android:id="@+id/no_scroll_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:divider="#f2f2f2"
                android:background="@color/white"
                android:layout_marginTop="2dp">
            </com.yskj.welcomeorchard.widget.NoScrollListView>
        </LinearLayout>
    </com.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/imgView_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@mipmap/tanchuang_yuancha" />
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="130dp"
                        android:textColor="#ff6823"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_select_property"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#3f4447"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_good_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:textColor="#3f4447"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_good_art"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:textColor="#3f4447"
                        android:textSize="13sp" />
                </LinearLayout>

            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.yskj.welcomeorchard.widget.NoScrollListView
                        android:id="@+id/lv_commodity_property"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:listSelector="@color/transparent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="购买数量"
                            android:textColor="#3f4447"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btn_decrease"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:background="@color/white"
                            android:enabled="false"
                            android:text="—"
                            android:gravity="center"
                            android:textColor="#eaeaea"
                            android:textSize="30dp" />

                        <EditText
                            android:id="@+id/tv_amount"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_corner_d2d2d2"
                            android:gravity="center"
                            android:text="1"

                            android:maxLength="4"
                            android:inputType="number"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btn_increase"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/white"
                            android:text="+"
                            android:textColor="@color/activity_red"
                            android:textSize="30dp" />
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgView_good_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/add_bank_card" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_put_true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/activity_red"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#247df6"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>
